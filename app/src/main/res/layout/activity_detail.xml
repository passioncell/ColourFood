<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/ib_detail_back"
            android:background="@drawable/icon_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="만석식당"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/vp_detail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </android.support.v4.view.ViewPager>

                <TextView
                    android:id="@+id/tv_detail_image_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/3"
                    android:background="#88000000"
                    android:textColor="#fff"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    />
            </RelativeLayout>


            <!-- 평점 섹터 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/rb_detail"
                    android:theme="@style/RatingBar"
                    android:rating="5"
                    android:stepSize="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_detail_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="4.5"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:layout_marginBottom="5dp">

                <!-- 버튼 섹터-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/bt_detail_call"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="전화하기"
                        android:background="@drawable/round_stroke"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="10dp"/>
                    <Button
                        android:id="@+id/bt_detail_map"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="지도보기"
                        android:background="@drawable/round_stroke"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="10dp"/>
                    <Button
                        android:id="@+id/bt_detail_share"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="공유하기"
                        android:background="@drawable/round_stroke"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 태그 섹터 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#A1887F"
                android:padding="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/icon_tag"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="Tags"
                        android:textColor="#fff"
                        android:layout_gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#강대 #강대후문 #백반 #맛집 #데이트코스"
                    android:textColor="#fff"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#저렴 #한식 #저칼로리 #혜자"
                    android:textColor="#fff"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <!-- 카테고리 섹터 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#8D6E63"
                android:padding="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/icon_category"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="Category"
                        android:textColor="#fff"
                        android:layout_gravity="center" />
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한식 | 퓨전식"
                    android:textColor="#fff"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <!-- 상세내용 섹터 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#795548"
                android:padding="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/icon_detail"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="Details"
                        android:textColor="#fff"
                        android:layout_gravity="center" />
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영업시간 : 09:00 ~ 24:00"
                    android:textColor="#fff"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="특이사항 : 주차가능 | 간이쌤"
                    android:textColor="#fff"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>