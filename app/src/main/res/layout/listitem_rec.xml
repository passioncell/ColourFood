<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false">
        <ImageView
            android:id="@+id/iv_list_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:layout_marginBottom="3dp"/>

        <ImageButton
            android:id="@+id/ib_list_like"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_heart_off"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:id="@+id/tv_list_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title ~~~~~~~~~~"
            android:textSize="17dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@id/iv_list_image"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#88000000"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rb_list"
            android:theme="@style/RatingBar"
            android:rating="5"
            android:stepSize="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_list_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.7"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_list_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address~"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_comment"/>
        <TextView
            android:id="@+id/tv_list_review_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="0"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_map"/>
        <TextView
            android:id="@+id/tv_list_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="0.0km"/>

    </LinearLayout>
</LinearLayout>